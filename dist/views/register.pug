extends layout

block content

	h1=title

	form(method='POST' action='')
		div.form-group
			label(for='name') Username:
			input#name.form-control(type='text' placeholder='1-20 characters' name='name' required='true' value=(undefined===name ? '' : name))
		div.form-group
			label(for='password1') Password:
			input#password1.form-control(type='text' placeholder='1-20 characters' name='password1')
			label(for='password2') Password again:
			input#password2.form-control(type='text' placeholder='1-20 characters' name='password2')
		button.btn.btn-primary(type='submit') Submit
	if errors 
		ul
			for error in errors
				li!= error.msg